
page {
		font-weight: normal;
}
.fui-filter--wrap{
		position: relative;
}
.fui-section__title {
		margin-left: 32rpx;
}

	/* 筛选 */
.fui-scroll__view {
		width: 640rpx;
		flex: 1;
		overflow: hidden;
}
.fui-filter__title {
		width: 100%;
		padding: 32rpx 24rpx 24rpx 24rpx;
		box-sizing: border-box;
		font-size: 32rpx;
		line-height: 32rpx;
		font-weight: bold;
}
.fui-filter__list {
		width: 100%;
		display: inline-flex;
		flex-direction: column;
		padding-bottom: 24rpx;
}
.fui-filter__item {
		width: 100%;
		padding: 0 24rpx;
		box-sizing: border-box;
		display: flex;
		flex-wrap: wrap;
}
.fui-filter__item-btn {
		width: 32%;
		height: 64rpx;
		line-height: 64rpx;
		background: #f7f7f7;
		display: inline-block;
		padding: 0 8rpx;
		box-sizing: border-box;
		border-radius: 32rpx;
		margin-right: 2%;
		margin-bottom: 2%;
		font-size: 26rpx;
		flex-shrink: 0;
		overflow: hidden;
		white-space: nowrap;
		text-overflow: ellipsis;
		text-align: center;
		position: relative;
		border: 1rpx solid #f7f7f7;
}
.fui-filter__item-btn:nth-of-type(3n) {
		margin-right: 0;
}
.fui-item__btn-active {
		background: #F1F4FA;
		color: #465CFF;
		border-color: #465CFF;
}

	/* 筛选 */
