@import "../../../nvue.acss";

page {
		font-weight: normal;
}
.fui-align__center {
		flex-direction: row;
}
.fui-section__title {
		margin-left: 32rpx;
}

	/* 布局内容样式 start */
.fui-goods__bar-wrap {

		width: 100%;

		height: 100rpx;
		background: #fff;
}
.fui-goodsbar__item {
		height: 92rpx;

		display: flex;
		flex-shrink: 0;

		flex-direction: column;
		justify-content: center;
		align-items: center;
		flex: 1;



		position: relative;
}
.fui-goodsbar__item:active {
		opacity: .5;
}
.fui-goods__bar-left {
		flex: 1;
		padding: 0 12rpx;

		box-sizing: border-box;
}
.fui-goodsbar__flex {

		display: flex;

		flex-direction: row;
		align-items: center;
		justify-content: space-between;
}
.fui-goodsbar__text {

		display: flex;

		font-size: 26rpx;
		/* line-height: 26rpx; */
		transform: scale(.7);
		transform-origin: center center;
}
.fui-goods__bar-right {
		width: 450rpx;

		flex-shrink: 0;
		box-sizing: border-box;

		padding-right: 8rpx;
}
.fui-gb__right-width {
		width: 520rpx;
}
.fui-gb__btn-box {
		flex: 1;



		padding-right: 12rpx;

		display: block;
		box-sizing: border-box;
}
.fui-gb__icon-box{
		position: relative;
}
.fui-goodsbar__fixed {
		position: fixed;
		left: 0;
		right: 0;
		bottom: 0;

		z-index: 10;
}

	/* 布局内容样式 end */
